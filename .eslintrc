{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
      "no-var": true,
      "indent": 2,
      "brace-style": [2, "1tbs"],
      "comma-style": [2, "last"],
      "default-case": 2,
      "guard-for-in": 2,
      "no-floating-decimal": 2,
      "no-nested-ternary": 2,
      "radix": 2,
      "space-after-function-name": [2, "always"],
      "space-after-keywords": [2, "always"],
      "space-before-blocks": 2,
      "spaced-line-comment": [2, "always", { "exceptions": ["-"]}],
      "strict": [2, "global"],
      "valid-jsdoc": [2, { "prefer": { "return": "returns"}}],
      "wrap-iife": 2
  }
}
